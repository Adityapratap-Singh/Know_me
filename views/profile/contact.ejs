<% layout('layouts/boilerPlate') %>

<article class="contact active" data-page="contact">

  <header>
    <h2 class="h2 article-title">Contact</h2>
  </header>

  <section class="mapbox" data-mapbox>
    <figure>
      <iframe 
        src="<%= process.env.maps %>" 
        width="800" height="600" 
        style="border:0;" 
        allowfullscreen 
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade">
      </iframe>
    </figure>
  </section>

  <section class="contact-form">
    <h3 class="h3 form-title">Contact Form</h3>

    <div id="form-feedback" class="form-feedback" aria-live="polite" aria-atomic="true" style="display: none;"></div>

    <form action="/contact" method="POST" class="form" data-form enctype="multipart/form-data">

      <div class="input-wrapper">
        <!-- FIXED: fullname â†’ name -->
        <input type="text" name="name" class="form-input" placeholder="Full Name" required data-form-input>
        <input type="email" name="email" class="form-input" placeholder="Email Address" required data-form-input>
      </div>

      <div class="input-wrapper">
        <input type="number" name="phone" class="form-input" placeholder="Phone Number" required data-form-input>
      </div>

      <textarea name="message" class="form-input" placeholder="Your Message" required data-form-input></textarea>

      <div class="input-wrapper">
        <input type="file" name="attachment" class="form-input" accept="application/pdf">
      </div>

      <button class="form-btn" type="submit" disabled data-form-btn>
        <ion-icon name="paper-plane"></ion-icon>
        <span>Send Message</span>
      </button>

    </form>
  </section>

</article>
