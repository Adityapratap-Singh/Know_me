<% layout('layouts/boilerPlate') %>
<%# This EJS file renders the main profile page, showcasing various aspects of the portfolio owner. %>

<article class="about  active" data-page="about">
    <header>
      <h2 class="h2 article-title">About me</h2>
    </header>

    <section class="about-text">
      <p>
        I'm a Creative Developer and UI/UX Designer based in Pune, India, specializing in Web Development and Machine Learning. 
        I enjoy solving complex problems by turning them into smart, functional, and visually appealing digital experiences.
      </p>

      <p>
        My focus is on building applications and websites that are not only user-friendly but also powered by intelligent 
        solutions. By blending design with technology, I ensure that every project is efficient, innovative, and aligned 
        with the brand’s identity. I’ve worked on projects ranging from intuitive web platforms to ML-driven applications 
        that deliver real impact.
      </p>
      <p>
        Beyond the code, I value ownership, clarity, and empathy. I enjoy mentoring peers, turning vague briefs into shippable outcomes, and collaborating tightly with designers and PMs. Comfortable across front-end, back-end, and product thinking.
      </p>
    </section>


    <%# Section for "What I'm doing" (services offered) %>
    <section class="service">
      <h3 class="h3 service-title">What i'm doing</h3>
      <ul class="service-list">
        <%# Loop through each 'whatDoIDo' item and display it. %>
        <% whatDoIDo.forEach(function(what) { %>
        <li class="service-item">
          <div class="service-icon-box">
            <%# Display the icon for the service, if available. %>
            <img src="<%= (what.icon && what.icon.url) ? what.icon.url : '' %>" alt="<%= what.title %>" width="40">
          </div>
          <div class="service-content-box">
            <h4 class="h4 service-item-title"><%= what.title %></h4>
            <p class="service-item-text">
              <%= what.description %>
            </p>
          </div>
        </li>
        <% }); %>
      </ul>
    </section>

    <section class="service">
      <h3 class="h3 service-title">Identity & Soft Skills</h3>
      <ul class="service-list">
        <li class="service-item">
          <div class="service-content-box">
            <h4 class="h4 service-item-title">Ways I Work</h4>
            <p class="service-item-text">Ownership, communication, rapid iteration, design empathy, system thinking.</p>
          </div>
        </li>
        <li class="service-item">
          <div class="service-content-box">
            <h4 class="h4 service-item-title">Collaboration</h4>
            <p class="service-item-text">Partnering with design, PM, and stakeholders; mentoring juniors; clear handoffs.</p>
          </div>
        </li>
      </ul>
    </section>


    <%# Section for Testimonials %>
    <section class="testimonials">
        <h3 class="h3 testimonials-title">Testimonials</h3>
        <ul class="testimonials-list has-scrollbar">
          <%# Loop through each testimonial and display it. %>
          <% testimonials.forEach(function(testi) { %>
          <li class="testimonials-item">
            <div class="content-card testimonial-card" data-testimonials-item>
              <figure class="testimonials-avatar-box">
                <%# Display the testimonial author's avatar, or a default image if none is provided. %>
                <img src="<%= (testi.image && testi.image.url) ? testi.image.url : '/assets/images/avatar/avatar-1.png' %>" alt="<%= testi.name %>" width="60" data-testimonials-avatar>
              </figure>
              <h4 class="h4 testimonials-item-title" data-testimonials-title><%= testi.name %></h4>
              <div class="testimonials-text" data-testimonials-text>
                <p>
                  <%= testi.testimonial %>
                </p>
              </div>
            </div>
          </li>
          <% }); %>
        </ul>
        <div class="testimonial-nav prev" aria-label="Previous"><ion-icon name="chevron-back"></ion-icon></div>
        <div class="testimonial-nav next" aria-label="Next"><ion-icon name="chevron-forward"></ion-icon></div>
      </section>

      <%# Section for Clients %>
      <section class="clients"> 
          <h3 class="h3 clients-title">Clients</h3>
          <ul class="clients-list has-scrollbar">
            <%# Loop through each client and display their logo and website link. %>
            <% clients.forEach(function(client) { %>
            <li class="clients-item">
              <a href="<%= client.website %>" target="_blank" rel="noopener noreferrer">
                <div class="client-logo-container">
                  <img src="<%= client.logo.url %>" alt="<%= client.name %> logo">
                </div>
              </a>
            </li>
            <% }); %>
          </ul>
        </section>
    </div>
</article>
