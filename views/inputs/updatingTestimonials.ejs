<% layout('layouts/boilerPlate') %>

<article class="contact active" data-page="update-testimonials">
    <header>
        <h2 class="h2 article-title">Update Testimonials</h2>
    </header>

    <% if (action === 'add') { %>
    <section class="contact-form">
        <h3 class="h3 form-title">Add New Testimonial</h3>
        <form action="/updating/testimonial/add" method="POST" class="form" enctype="multipart/form-data">
            <div class="input-wrapper">
                <input type="text" name="name" class="form-input" placeholder="Name" required>
                <input type="text" name="position" class="form-input" placeholder="Position (e.g., HOD, Professor)" required>
            </div>
            <div class="input-wrapper">
                <input type="file" name="image" class="form-input">
            </div>
            <textarea name="testimonial" class="form-input" placeholder="Testimonial" required></textarea>
            <button type="submit" class="form-btn" style="margin-top: 1rem;">
                <ion-icon name="add-outline"></ion-icon>
                <span>Add Testimonial</span>
            </button>
        </form>
    </section>
    <% } else if (action === 'delete') { %>
    <section class="service">
        <h3 class="h3 service-title">Delete Testimonial</h3>
        <% if (data && data.length > 0) { %>
        <ul class="service-list">
            <% data.forEach(item => { %>
            <li class="service-item">
                <div class="service-content-box">
                    <h4 class="h4 service-item-title"><%= item.name %></h4>
                    <p class="service-item-text"><%= item.position %></p>
                    <p class="service-item-text">"<%= item.testimonial %>"</p>
                    <form action="/updating/testimonial/delete/<%= item._id %>?_method=DELETE" method="POST" style="margin-top: 1rem;">
                        <button type="submit" class="form-btn" style="width: 100%;">
                            <ion-icon name="trash-outline"></ion-icon>
                            <span>Delete</span>
                        </button>
                    </form>
                </div>
            </li>
            <% }); %>
        </ul>
        <% } else { %>
        <p>No items found.</p>
        <% } %>
    </section>
    <% } %>
</article>
