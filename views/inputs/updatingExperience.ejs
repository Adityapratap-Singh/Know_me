<% layout('layouts/boilerPlate') %>

<article class="contact active" data-page="update-experience">
    <header>
        <h2 class="h2 article-title">Update Experience</h2>
    </header>
    <%- include("../includes/admin-nav") %>

    <% if (action === 'add') { %>
    <section class="contact-form">
        <h3 class="h3 form-title">Add New Experience</h3>
        <form action="/updating/experience/add" method="POST" class="form">
            <div class="input-wrapper">
                <input type="text" name="company" class="form-input" placeholder="Company" required>
                <input type="text" name="position" class="form-input" placeholder="Position" required>
            </div>
            <div class="input-wrapper">
                <input type="text" name="location" class="form-input" placeholder="Location">
            </div>
            <div class="input-wrapper">
                <input type="text" onfocus="(this.type='date')" onblur="(this.type='text')" name="startDate" class="form-input" placeholder="Start Date" required>
                <input type="text" onfocus="(this.type='date')" onblur="(this.type='text')" name="endDate" class="form-input" placeholder="End Date">
            </div>
            <textarea name="responsibilities" class="form-input" placeholder="Responsibilities (one per line)" required></textarea>
            <div class="card-actions">
                <button type="submit" name="save_action" value="save" class="neon-btn" style="flex: 1;">
                    <ion-icon name="add-outline"></ion-icon>
                    <span>Save</span>
                </button>
                <button type="submit" name="save_action" value="save_and_add_another" class="neon-btn secondary" style="flex: 1;">
                    <ion-icon name="duplicate-outline"></ion-icon>
                    <span>Save & Add Another</span>
                </button>
            </div>
        </form>
    </section>
    <% } else if (action === 'edit') { %>
    <section class="contact-form">
        <h3 class="h3 form-title">Edit Experience</h3>
        <form action="/updating/experience/edit/<%= data._id %>?_method=PUT" method="POST" class="form">
            <div class="input-wrapper">
                <input type="text" name="company" class="form-input" value="<%= data.company %>" required>
                <input type="text" name="position" class="form-input" value="<%= data.position %>" required>
            </div>
            <div class="input-wrapper">
                <input type="text" name="location" class="form-input" value="<%= data.location %>">
            </div>
            <div class="input-wrapper">
                <input type="text" onfocus="(this.type='date')" onblur="(this.type='text')" name="startDate" class="form-input" value="<%= new Date(data.startDate).toISOString().split('T')[0] %>" required>
                <input type="text" onfocus="(this.type='date')" onblur="(this.type='text')" name="endDate" class="form-input" value="<%= data.endDate ? new Date(data.endDate).toISOString().split('T')[0] : '' %>">
            </div>
            <textarea name="responsibilities" class="form-input" placeholder="Responsibilities (one per line)" required><%= (data.responsibilities || []).join('\n') %></textarea>
            <button type="submit" class="form-btn">
                <ion-icon name="checkmark-outline"></ion-icon>
                <span>Update Experience</span>
            </button>
        </form>
    </section>
    <% } else if (action === 'delete') { %>
    <section class="service">
        <h3 class="h3 service-title">Manage Experience</h3>
        <% if (data && data.length > 0) { %>
        <form action="/updating/experience/delete-batch" method="POST" id="batchDeleteForm">
            <div class="card-actions" style="margin-bottom: 20px;">
                <button type="button" class="neon-btn secondary" id="selectAllBtn">
                    <ion-icon name="checkbox-outline"></ion-icon>
                    <span>Select All</span>
                </button>
                <button type="submit" class="neon-btn danger">
                    <ion-icon name="trash-outline"></ion-icon>
                    <span>Delete Selected</span>
                </button>
            </div>
            <ul class="service-list">
                <% data.forEach(item => { %>
                <li class="service-item" style="display: flex; align-items: flex-start; gap: 15px; padding: 25px;">
                    <div style="padding-top: 5px;">
                        <input type="checkbox" name="ids[]" value="<%= item._id %>">
                    </div>
                    <div class="service-icon-box" style="margin-bottom: 0; min-width: 40px; display: flex; justify-content: center;">
                        <ion-icon name="briefcase-outline" style="font-size: 30px; color: var(--orange-yellow-crayola);"></ion-icon>
                    </div>
                    <div style="flex: 1;">
                        <div class="service-content-box" style="text-align: left;">
                            <h4 class="h4 service-item-title" style="margin-bottom: 5px;"><%= item.position %></h4>
                            <p class="service-item-text" style="color: var(--light-gray); margin-bottom: 5px;">
                                <%= item.company %>
                            </p>
                            <p class="service-item-text" style="font-size: var(--fs-8); color: var(--light-gray-70);">
                                <%= new Date(item.startDate).getFullYear() %> â€” <%= item.endDate ? new Date(item.endDate).getFullYear() : 'Present' %>
                            </p>
                            <div class="card-actions">
                                <a href="/updating/experience/edit/<%= item._id %>" class="neon-btn">
                                    <ion-icon name="create-outline"></ion-icon>
                                    <span>Edit</span>
                                </a>
                                <button type="button" onclick="if(confirm('Are you sure?')) { const form = document.createElement('form'); form.method = 'POST'; form.action = '/updating/experience/delete/<%= item._id %>?_method=DELETE'; document.body.appendChild(form); form.submit(); }" class="neon-btn danger">
                                    <ion-icon name="trash-outline"></ion-icon>
                                    <span>Delete</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </li>
                <% }); %>
            </ul>
        </form>
        <script>
            document.getElementById('selectAllBtn').addEventListener('click', function() {
                const checkboxes = document.querySelectorAll('input[name="ids[]"]');
                const allChecked = Array.from(checkboxes).every(cb => cb.checked);
                checkboxes.forEach(cb => cb.checked = !allChecked);
                this.querySelector('span').textContent = allChecked ? 'Select All' : 'Deselect All';
            });
        </script>
        <% } else { %>
        <p>No items found.</p>
        <% } %>
    </section>
    <% } %>
</article>
