<% layout('layouts/boilerPlate') %>

<article class="contact active" data-page="update-skills">
    <header>
        <h2 class="h2 article-title">Update Skills</h2>
    </header>

    <% if (action === 'add') { %>
    <section class="contact-form">
        <h3 class="h3 form-title">Add New Skill</h3>
        <form action="/updating/skill/add" method="POST" class="form">
            <div class="input-wrapper">
                <input type="text" name="name" class="form-input" placeholder="Skill Name (e.g., Web Development)" required>
                <input type="text" name="tools" class="form-input" placeholder="Tools (comma-separated)" required>
            </div>
            <button type="submit" class="form-btn" style="margin-top: 1rem;">
                <ion-icon name="add-outline"></ion-icon>
                <span>Add Skill</span>
            </button>
        </form>
    </section>
    <% } else if (action === 'delete') { %>
    <section class="service">
        <h3 class="h3 service-title">Delete Skill</h3>
        <% if (data && data.length > 0) { %>
        <ul class="service-list">
            <% data.forEach(item => { %>
            <li class="service-item">
                <div class="service-content-box">
                    <h4 class="h4 service-item-title"><%= item.name %></h4>
                    <p class="service-item-text"><%= item.tools.join(', ') %></p>
                    <form action="/updating/skill/delete/<%= item._id %>?_method=DELETE" method="POST" style="margin-top: 1rem;">
                        <button type="submit" class="form-btn" style="width: 100%;">
                            <ion-icon name="trash-outline"></ion-icon>
                            <span>Delete</span>
                        </button>
                    </form>
                </div>
            </li>
            <% }); %>
        </ul>
        <% } else { %>
        <p>No items found.</p>
        <% } %>
    </section>
    <% } %>
</article>
