<% layout('layouts/boilerPlate') %>

<article class="contact active" data-page="update-whatdoido">
    <header>
        <h2 class="h2 article-title">Update "What I'm Doing"</h2>
    </header>
    <%- include("../includes/admin-nav") %>

    <% if (action === 'add') { %>
    <section class="contact-form">
        <h3 class="h3 form-title">Add New Item</h3>
        <form action="/updating/whatDoIDo/add" method="POST" class="form" enctype="multipart/form-data">
            <div class="input-wrapper">
                <input type="text" name="title" class="form-input" placeholder="Title" required>
                <input type="file" name="icon" class="form-input">
            </div>
            <textarea name="description" class="form-input" placeholder="Description" required></textarea>
            <div style="display: flex; gap: 1rem; margin-top: 1rem;">
                <button type="submit" name="save_action" value="save" class="form-btn" style="flex: 1;">
                    <ion-icon name="add-outline"></ion-icon>
                    <span>Save</span>
                </button>
                <button type="submit" name="save_action" value="save_and_add_another" class="form-btn" style="flex: 1; background: var(--bg-gradient-onyx); border: 1px solid var(--jet);">
                    <ion-icon name="duplicate-outline"></ion-icon>
                    <span>Save & Add Another</span>
                </button>
            </div>
        </form>
    </section>
    <% } else if (action === 'edit') { %>
    <section class="contact-form">
        <h3 class="h3 form-title">Edit Item</h3>
        <form action="/updating/whatDoIDo/edit/<%= data._id %>?_method=PUT" method="POST" class="form" enctype="multipart/form-data">
            <div class="input-wrapper">
                <input type="text" name="title" class="form-input" value="<%= data.title %>" required>
                <input type="file" name="icon" class="form-input">
                <% if (data.icon && data.icon.url) { %>
                    <p>Current Icon: <img src="<%= data.icon.url %>" alt="Current Icon" width="50"></p>
                    <div class="checkbox-wrapper">
                        <input type="checkbox" id="deleteIcon" name="deleteIcon" value="true">
                        <label for="deleteIcon">Delete Current Icon</label>
                    </div>
                <% } %>
            </div>
            <textarea name="description" class="form-input" required><%= data.description %></textarea>
            <button type="submit" class="form-btn" style="margin-top: 1rem;">
                <ion-icon name="checkmark-outline"></ion-icon>
                <span>Update Item</span>
            </button>
        </form>
    </section>
    <% } else if (action === 'delete') { %>
    <section class="service">
        <h3 class="h3 service-title">Manage Items</h3>
        <% if (data && data.length > 0) { %>
        <form action="/updating/whatDoIDo/delete-batch" method="POST" id="batchDeleteForm">
            <div style="margin-bottom: 1rem; display: flex; gap: 1rem;">
                <button type="button" class="form-btn" id="selectAllBtn" style="flex: 1; background: var(--bg-gradient-onyx); border: 1px solid var(--jet);">
                    <ion-icon name="checkbox-outline"></ion-icon>
                    <span>Select All</span>
                </button>
                <button type="submit" class="form-btn" style="flex: 1; background: var(--bittersweet-shimmer);">
                    <ion-icon name="trash-outline"></ion-icon>
                    <span>Delete Selected</span>
                </button>
            </div>
            <ul class="service-list">
                <% data.forEach(item => { %>
                <li class="service-item" style="display: flex; align-items: flex-start; gap: 15px; padding: 25px;">
                    <div style="padding-top: 5px;">
                        <input type="checkbox" name="ids[]" value="<%= item._id %>" style="width: 20px; height: 20px; cursor: pointer;">
                    </div>
                    <div class="service-icon-box" style="margin-bottom: 0; min-width: 40px; display: flex; justify-content: center;">
                        <% if (item.icon && item.icon.url) { %>
                            <img src="<%= item.icon.url %>" alt="<%= item.title %>" style="width: 40px; height: 40px; object-fit: contain;">
                        <% } else { %>
                            <ion-icon name="construct-outline" style="font-size: 30px; color: var(--orange-yellow-crayola);"></ion-icon>
                        <% } %>
                    </div>
                    <div style="flex: 1;">
                        <div class="service-content-box" style="text-align: left;">
                            <h4 class="h4 service-item-title" style="margin-bottom: 5px;"><%= item.title %></h4>
                            <p class="service-item-text" style="color: var(--light-gray); margin-bottom: 5px;">
                                <%= item.description %>
                            </p>
                            <div style="display: flex; gap: 1rem; margin-top: 1rem;">
                                <a href="/updating/whatDoIDo/edit/<%= item._id %>" class="form-btn" style="flex: 1; text-align: center;">
                                    <ion-icon name="create-outline"></ion-icon>
                                    <span>Edit</span>
                                </a>
                                <button type="button" onclick="if(confirm('Are you sure?')) { const form = document.createElement('form'); form.method = 'POST'; form.action = '/updating/whatDoIDo/delete/<%= item._id %>?_method=DELETE'; document.body.appendChild(form); form.submit(); }" class="form-btn" style="flex: 1; width: 100%;">
                                    <ion-icon name="trash-outline"></ion-icon>
                                    <span>Delete</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </li>
                <% }); %>
            </ul>
        </form>
        <script>
            document.getElementById('selectAllBtn').addEventListener('click', function() {
                const checkboxes = document.querySelectorAll('input[name="ids[]"]');
                const allChecked = Array.from(checkboxes).every(cb => cb.checked);
                checkboxes.forEach(cb => cb.checked = !allChecked);
                this.querySelector('span').textContent = allChecked ? 'Select All' : 'Deselect All';
            });
        </script>
        <% } else { %>
        <p>No items found.</p>
        <% } %>
    </section>
    <% } %>
</article>
