<% layout('layouts/boilerPlate') %>

<article class="active">
    <header>
        <h2 class="h2 article-title">Verification for <%= purpose %></h2>
    </header>

    <section class="contact-form">
        <h6 style="color: #6e6e70;">A verification code has been sent to your Telegram. Please enter the code below to continue.</h6>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger" role="alert" style="background-color: hsla(0, 43%, 51%, 0.1); color: var(--bittersweet-shimmer); border: 1px solid var(--bittersweet-shimmer); padding: 10px 15px; margin-bottom: 20px; border-radius: 8px; font-size: var(--fs-6); font-weight: var(--fw-500); text-align: center;">
                <%= error %>
            </div>
        <% } %>

        <% let action; %>
        <% if (purpose === 'updating') { %>
            <% action = '/updating/verify'; %>
        <% } else if (purpose === 'viewing contacts') { %>
            <% action = '/verify-contacts/check'; %>
        <% } %>

        <form action="<%= action %>" method="POST" class="form">
            <div class="input-wrapper">
                <input type="text" name="code" id="code" class="form-input" placeholder="Verification Code" required>
            </div>
            <button class="form-btn" type="submit">
                <ion-icon name="checkmark-outline"></ion-icon>
                <span>Verify</span>
            </button>
        </form>
    </section>
</article>